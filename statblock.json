{
	"$schema": "http://json-schema.org/draft-04/schema",
	"properties": {
		"maxHP": {
			"description": "Maximum hit points",
			"type": "integer"
		},
		"AC": {
			"description": "Armor Class",
			"type": "integer"
		},
        "PB": {
            "description": "Proficiency Bonus",
            "type": "integer"
        },
		"speed":{
			"description": "Various movement speeds",
			"type":"object",
			"properties": {
				"walking": {
					"type": "integer"
				},
				"flying": {
					"type": "integer"
				}
			}
		},
        "stats": {
            "description": "Ability Scores",
            "type": "object",
            "properties": {
                "STR": {"type":"integer"},
                "DEX": {"type":"integer"},
                "CON": {"type":"integer"},
                "INT": {"type":"integer"},
                "WIS": {"type":"integer"},
                "CHA": {"type":"integer"}
            },
            "required": ["STR", "DEX", "CON", "INT", "WIS", "CHA"]
        },
        "actions": {
            "type": "object",
            "description": "Non-attack actions",
            "patternProperties": {
                "^.*$":{
                    "properties": {
                        "text": {"type":"string"},
                        "rolls": {"type":"object"},
                        "uses": {"type": "integer"}
                    }
                }
            },
            "properties": {
                "multiattack":{
                    "type": "array",
                    "description": "A list of attacks given in the format 'x*attack_key' where x is the number of attacks"
                }
            }
        },
        "traits":{
            "type": "object",
            "description": "Additional traits and info"
        },
        "attacks": {
            "type": "object",
            "description": "Basic Attacks",
            "patternProperties": {
                "^.*$":{
                    "patternProperties": {
                        "^type$": {"enum":["melee", "ranged"]}
                    },
                    "properties": {
                        "range": {"type": "string"},
                        "to-hit": {"type": "string"},
                        "damage": {"type": "string"}
                    },
                    "required": ["range", "to-hit", "damage"]
                }
            }
        }
	},
	"required":["maxHP", "AC", "speed", "PB", "stats"]
}